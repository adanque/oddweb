{
  "name": "oddapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "pm2": "^5.4.3"
  },
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js",
    "start_dev": "concurrently \"node server/server.js\" \"serve -s build\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^axios$": "axios/dist/node/axios.cjs"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
